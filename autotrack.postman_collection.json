{
  "info": {
    "name": "AutoTrack API",
    "description": "Colección de endpoints principales del backend AutoTrack.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "me"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Clientes",
      "item": [
        {
          "name": "Listar clientes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/clientes?search=",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "clientes"
              ],
              "query": [
                {
                  "key": "search",
                  "value": ""
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Crear cliente",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Cliente Demo\",\n  \"direccion\": \"Calle 1\",\n  \"tipo_cliente\": \"Natural\",\n  \"telefono\": \"555-0101\",\n  \"email\": \"demo@example.com\",\n  \"nit\": \"1234567-8\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/clientes",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "clientes"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Órdenes de Trabajo",
      "item": [
        {
          "name": "Listar OT",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/otes",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "otes"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Confirmar OT",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/otes/1/confirmar",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "otes",
                "1",
                "confirmar"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Facturas",
      "item": [
        {
          "name": "Crear factura",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orden_id\": 1,\n  \"metodos_pago\": [\"Efectivo\"],\n  \"impuesto_aplicado\": 25.00\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/facturas",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "facturas"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Reportes",
      "item": [
        {
          "name": "Ventas mensuales CSV",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/reportes/ventas-mensuales.csv",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "reportes",
                "ventas-mensuales.csv"
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api/v1"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}
